@using HtmlTags
@using Shop.Features.Product
@model ProductDelete.Command

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Confirm Delete</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.Display(model => model.ProductName)
        </dd>
        
        <dt>
            Price
        </dt>

        <dd>
            @Html.Display(model => model.Price)
        </dd>
    </dl>

    @using (Html.BeginForm("productdelete", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.ProductReference)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ManageProducts", "Product")
        </div>
    }
</div>
