@using Shop.Features
@model Shop.Features.Product.ProductEdit.Command

@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<h2>Edit Product</h2>

@using (Html.BeginForm("productedit", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        
        @Html.HiddenFor(m=>m.ProductReference)
        @Html.ValidationDiv()
        @Html.FormBlock(m => m.ProductName)
        @Html.FormBlock(m => m.ProductShortDescription)
        @Html.FormBlock(m => m.ProductDescription)
        @Html.FormBlock(m => m.Price)
        @Html.FormBlock(m => m.TaxRate)
        @Html.FormBlock(m => m.AvailableForOrder)
        @Html.FormBlock(m => m.Configureable)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ManageProducts", "Product")
</div>